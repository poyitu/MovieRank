<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/poster_tv_item"
            android:layout_width="160dp"
            android:layout_height="224dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/name_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/poster_tv_item"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_en_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/name_tv_item" />

        <TextView
            android:id="@+id/director_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/name_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/name_en_tv_item" />

        <TextView
            android:id="@+id/actor_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/director_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/director_tv_item" />

        <TextView
            android:id="@+id/time_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/region_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/region_tv_item" />

        <TextView
            android:id="@+id/popularity_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="111"
            app:layout_constraintBottom_toBottomOf="@id/hot_imageView_tv_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hot_imageView_tv_item"
            app:layout_constraintTop_toTopOf="@id/hot_imageView_tv_item" />

        <TextView
            android:id="@+id/region_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/actor_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/actor_tv_item" />

        <TextView
            android:id="@+id/tags_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/time_tv_item"
            app:layout_constraintTop_toBottomOf="@id/time_tv_item" />

        <ImageView
            android:id="@+id/hot_imageView_tv_item"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tags_tv_item"
            app:layout_constraintTop_toBottomOf="@+id/tags_tv_item"
            app:srcCompat="@drawable/hot" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>